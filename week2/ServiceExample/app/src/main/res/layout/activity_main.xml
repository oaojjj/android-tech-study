<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_downloaded_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="40dp"
        android:background="@mipmap/ic_launcher"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/et_image_url"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_start_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다운로드 시작(바인딩)"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt_stop_bound"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_stop_bound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다운로드 중지(바인딩)"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_start_bound" />

    <Button
        android:id="@+id/bt_start_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다운로드 시작"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_start_bound"
        app:layout_constraintEnd_toStartOf="@+id/bt_stop_service"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_stop_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다운로드 종료"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_stop_bound"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_start_service" />

    <EditText
        android:id="@+id/et_image_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이미지 URL을 입력하세요"
        android:minHeight="48dp"
        android:onClick=""
        app:layout_constraintBottom_toTopOf="@+id/bt_start_service"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>